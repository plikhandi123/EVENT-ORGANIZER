@{
    ViewBag.Title = "Videography";
}

<!-- Hero Start -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center animate__animated animate__fadeInDown">
        <h1 class="display-1 mb-4">Videography</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item text-dark" aria-current="page">Videography</li>
        </ol>
    </div>
</div>
<!-- Hero End -->
<!-- Videography Services Start -->
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold animate__animated animate__fadeInUp">Our Videography Services</h2>
        <p class="text-muted">We offer a wide range of video production services to make your event memorable forever.</p>
    </div>

    <div class="row g-4">
        <!-- Cinematic Wedding Films -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp">
                <img src="~/images/cinematic-video.jpg" class="card-img-top rounded" alt="Cinematic Video">
                <div class="card-body">
                    <h5 class="card-title">Cinematic Wedding Films</h5>
                    <p class="card-text">Story-driven wedding films with emotional and artistic storytelling.</p>
                </div>
            </div>
        </div>

        <!-- Drone Videography -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp animate__delay-1s">
                <img src="~/images/drone.jpg" class="card-img-top rounded" alt="Drone Coverage">
                <div class="card-body">
                    <h5 class="card-title">Drone Coverage</h5>
                    <p class="card-text">Aerial footage to capture breathtaking views of your event from above.</p>
                </div>
            </div>
        </div>

        <!-- Event Highlights -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp animate__delay-2s">
                <img src="~/images/highlights.jpg" class="card-img-top rounded" alt="Event Highlights">
                <div class="card-body">
                    <h5 class="card-title">Event Highlights</h5>
                    <p class="card-text">Short and engaging highlight videos summarizing your entire event beautifully.</p>
                </div>
            </div>
        </div>

        <!-- Live Streaming -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp">
                <img src="~/images/livestream.jpg" class="card-img-top rounded" alt="Live Streaming">
                <div class="card-body">
                    <h5 class="card-title">Live Streaming</h5>
                    <p class="card-text">Stream your event live for guests who can’t attend in person.</p>
                </div>
            </div>
        </div>

        <!-- Same Day Edits -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp animate__delay-1s">
                <img src="~/images/sameday.jpg" class="card-img-top rounded" alt="Same Day Edit">
                <div class="card-body">
                    <h5 class="card-title">Same Day Edits</h5>
                    <p class="card-text">Show a professionally edited video on the same day of your event.</p>
                </div>
            </div>
        </div>

        <!-- Full Documentary -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp animate__delay-2s">
                <img src="~/images/documentary.jpg" class="card-img-top rounded" alt="Full Documentary">
                <div class="card-body">
                    <h5 class="card-title">Full Event Documentary</h5>
                    <p class="card-text">Comprehensive full-length coverage that captures every detail and emotion.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Videography Services End -->
