@{
    ViewBag.Title = "Catering";
}

<!-- Hero Start -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center animated bounceInDown">
        <h1 class="display-1 mb-4">Catering </h1>
        <ol class="breadcrumb justify-content-center mb-0 animated bounceInDown">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item text-dark" aria-current="page">Catering </li>
        </ol>
    </div>
</div>
<!-- Hero End -->
<!-- Features Section -->
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Our Catering Features</h2>
        <p class="text-muted">Explore our wide range of catering services for every event.</p>
    </div>

    <div class="row g-4">
        <!-- Feature 1 -->
        <div class="col-md-3">
            <div class="card h-100 text-center p-3 shadow-sm">
                <img src="~/images/cuisine.jpg" class="card-img-top rounded" alt="Cuisine">
                <div class="card-body">
                    <h5 class="card-title">Multi-Cuisine Options</h5>
                    <p class="card-text">Indian, Continental, Chinese, and more.</p>
                </div>
            </div>
        </div>

        <!-- Feature 2 -->
        <div class="col-md-3">
            <div class="card h-100 text-center p-3 shadow-sm">
                <img src="~/images/live-station.jpg" class="card-img-top rounded" alt="Live Cooking">
                <div class="card-body">
                    <h5 class="card-title">Live Cooking Stations</h5>
                    <p class="card-text">Interactive live counters for fresh and hot servings.</p>
                </div>
            </div>
        </div>

        <!-- Feature 3 -->
        <div class="col-md-3">
            <div class="card h-100 text-center p-3 shadow-sm">
                <img src="~/images/beverages.jpg" class="card-img-top rounded" alt="Beverages">
                <div class="card-body">
                    <h5 class="card-title">Beverage Bars</h5>
                    <p class="card-text">Mocktails, cocktails, and refreshing drinks served elegantly.</p>
                </div>
            </div>
        </div>

        <!-- Feature 4 -->
        <div class="col-md-3">
            <div class="card h-100 text-center p-3 shadow-sm">
                <img src="~/images/staff.jpg" class="card-img-top rounded" alt="Service Staff">
                <div class="card-body">
                    <h5 class="card-title">Professional Service Staff</h5>
                    <p class="card-text">Trained staff to ensure seamless food service.</p>
                </div>
            </div>
        </div>
    </div>
</div>
