@{
    ViewBag.Title = "Photography";
}

<!-- Hero Start -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center animate__animated animate__fadeInDown">
        <h1 class="display-1 mb-4">Photography</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item text-dark" aria-current="page">Photography</li>
        </ol>
    </div>
</div>
<!-- Hero End -->
<!-- Photography Services Start -->
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold animate__animated animate__fadeInUp">Capture Every Moment Perfectly</h2>
        <p class="text-muted">We offer professional photography and videography services for all types of events.</p>
    </div>

    <div class="row g-4">
        <!-- Candid Photography -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp">
                <img src="~/images/img1.jpg" class="card-img-top rounded" alt="Candid Photography">
                <div class="card-body">
                    <h5 class="card-title">Candid Photography</h5>
                    <p class="card-text">Capture raw emotions and spontaneous moments with our candid photography service.</p>
                </div>
            </div>
        </div>

        <!-- Traditional Photography -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp animate__delay-1s">
                <img src="~/images/img2.jpg" class="card-img-top rounded" alt="Traditional Photography">
                <div class="card-body">
                    <h5 class="card-title">Traditional Photography</h5>
                    <p class="card-text">Perfectly posed and beautifully captured photographs for lasting memories.</p>
                </div>
            </div>
        </div>

        <!-- Cinematic Videography -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp animate__delay-2s">
                <img src="~/images/img3.jpg" class="card-img-top rounded" alt="Cinematic Videography">
                <div class="card-body">
                    <h5 class="card-title">Cinematic Videography</h5>
                    <p class="card-text">Relive your big day with cinematic-style video production and drone coverage.</p>
                </div>
            </div>
        </div>

        <!-- Pre-Wedding Shoots -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp">
                <img src="~/images/img4.jpg" class="card-img-top rounded" alt="Pre-Wedding Shoot">
                <div class="card-body">
                    <h5 class="card-title">Pre-Wedding Shoots</h5>
                    <p class="card-text">Stylized shoots that narrate your love story at scenic locations.</p>
                </div>
            </div>
        </div>

        <!-- Albums & Editing -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp animate__delay-1s">
                <img src="~/images/img6.jpg" class="card-img-top rounded" alt="Photo Albums">
                <div class="card-body">
                    <h5 class="card-title">Albums & Editing</h5>
                    <p class="card-text">Elegant photo albums and professional editing that enhance every shot.</p>
                </div>
            </div>
        </div>

        <!-- Instant Photo Booth -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow animate__animated animate__fadeInUp animate__delay-2s">
                <img src="~/images/img8.jpg" class="card-img-top rounded" alt="Photo Booth">
                <div class="card-body">
                    <h5 class="card-title">Instant Photo Booth</h5>
                    <p class="card-text">Fun and interactive photo booths with instant prints for your guests.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Photography Services End -->
