@{
    ViewBag.Title = "Decoration";
}

<!-- Hero Start -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center animated bounceInDown">
        <h1 class="display-1 mb-4">Decoration</h1>
        <ol class="breadcrumb justify-content-center mb-0 animated bounceInDown">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item text-dark" aria-current="page">Decoration</li>
        </ol>
    </div>
</div>
<!-- Hero End -->
<!-- Decoration Services Start -->
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Our Decoration Services</h2>
        <p class="text-muted">Transforming venues into magical spaces for your special day.</p>
    </div>

    <div class="row g-4">
        <!-- Floral Decoration -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow-sm">
                <img src="~/images/img6.jpg" class="card-img-top rounded" alt="Floral Decor">
                <div class="card-body">
                    <h5 class="card-title">Floral Arrangements</h5>
                    <p class="card-text">Elegant fresh flower decorations for stage, entrance, and seating.</p>
                </div>
            </div>
        </div>

        <!-- Lighting Decoration -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow-sm">
                <img src="~/images/img8.jpg" class="card-img-top rounded" alt="Lighting">
                <div class="card-body">
                    <h5 class="card-title">Ambient Lighting</h5>
                    <p class="card-text">Mood lighting, chandeliers, fairy lights, and LED setups.</p>
                </div>
            </div>
        </div>

        <!-- Theme Setup -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow-sm">
                <img src="~/images/img9.jpg" class="card-img-top rounded" alt="Theme Decor">
                <div class="card-body">
                    <h5 class="card-title">Theme Decor</h5>
                    <p class="card-text">Custom decoration themes for weddings, parties, and corporate events.</p>
                </div>
            </div>
        </div>

        <!-- Stage Design -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow-sm">
                <img src="~/images/img4.jpg" class="card-img-top rounded" alt="Stage Decor">
                <div class="card-body">
                    <h5 class="card-title">Stage Setup</h5>
                    <p class="card-text">Gorgeous and professional stage designs for ceremonies and performances.</p>
                </div>
            </div>
        </div>

        <!-- Entry Pathway -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow-sm">
                <img src="~/images/img10.jpg" class="card-img-top rounded" alt="Entrance Decor">
                <div class="card-body">
                    <h5 class="card-title">Entrance Decoration</h5>
                    <p class="card-text">Grand welcome setups with floral gates, arches, and carpet runners.</p>
                </div>
            </div>
        </div>

        <!-- Table Centerpieces -->
        <div class="col-md-4">
            <div class="card h-100 text-center p-3 shadow-sm">
                <img src="~/images/img3.jpg" class="card-img-top rounded" alt="Table Decor">
                <div class="card-body">
                    <h5 class="card-title">Table Centerpieces</h5>
                    <p class="card-text">Stylish centerpieces that add elegance to your guest tables.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Decoration Services End -->
