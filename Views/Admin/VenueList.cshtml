@model List<EVENT_ORGANIZER.Models.Venues>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    ViewData["Title"] = "Venue List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-header bg-primary text-black">
        <h4>Venues List</h4>
    </div>
    <div class="card-body">
        <table class="table table-responsive">
            <thead>
            <th>Venue ID</th>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Action</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.VenueId</td>
                        <td>@item.VenueName</td>
                        <td>@item.Location</td>
                        <td>@item.Capacity</td>
                        <td>
                            <a asp-action="EditVenue" asp-route-id="@item.VenueId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="DeleteVenue" asp-route-id="@item.VenueId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this venue?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
