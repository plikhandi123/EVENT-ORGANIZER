@{
    ViewData["Title"] = "Customization";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customizations Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>Customizations Table</h2>
        <form>
            <div class="mb-3">
                <label for="customizationId" class="form-label">Customization ID</label>
                <input type="number" class="form-control" id="customizationId" required>
            </div>
            <div class="mb-3">
                <label for="eventId" class="form-label">Event ID</label>
                <input type="number" class="form-control" id="eventId">
            </div>
            <div class="mb-3">
                <label for="theme" class="form-label">Theme</label>
                <input type="text" class="form-control" id="theme" maxlength="50">
            </div>
            <div class="mb-3">
                <label for="specialRequests" class="form-label">Special Requests</label>
                <textarea class="form-control" id="specialRequests" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th>Customization ID</th>
                    <th>Event ID</th>
                    <th>Theme</th>
                    <th>Special Requests</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample Data -->
                <tr>
                    <td>1</td>
                    <td>101</td>
                    <td>Beach Party</td>
                    <td>Extra decorations</td>
                </tr>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
