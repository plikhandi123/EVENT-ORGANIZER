@model List<EVENT_ORGANIZER.Models.Services>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Service List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="card">
    <div class="card-header bg-primary text-black">
        <h2>Service List</h2>
    </div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Service ID</th>
            <th>Service Name</th>
            <th>Description</th>
            <th>Actions</th> <!-- Added for Edit & Delete -->
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        { 
            <tr>
                <td>@service.ServiceId</td>
                <td>@service.ServiceName</td>
                <td>@service.Description</td>
                <td>
                    <a asp-action="EditService" asp-route-id="@service.ServiceId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DeleteService" asp-route-id="@service.ServiceId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this service?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

