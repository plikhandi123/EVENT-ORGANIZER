@model List<EVENT_ORGANIZER.Models.Events>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Event List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";


}
<div class="card">
    <div class="card-header bg-primary text-black">
        <h4>Event List</h4>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Event ID</th>
                <th>Event Name</th>
                <th>Description</th>
                <th>Actions</th> <!-- Column for Edit/Delete buttons -->
            </tr>
        </thead>
        <tbody>
            @foreach (var eventItem in Model)
            {
                <tr>
                    <td>@eventItem.EventId</td>
                    <td>@eventItem.EventName</td>
                    <td>@eventItem.Description</td>
                    <td>
                        <a asp-action="EditEvent" asp-route-id="@eventItem.EventId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="DeleteEvent" asp-route-id="@eventItem.EventId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
