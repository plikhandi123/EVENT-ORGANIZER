@model EVENT_ORGANIZER.Models.Venues

@{
    ViewData["Title"] = "Edit Venue";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Venue</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditVenue" method="post">
                <input type="hidden" asp-for="VenueId" />

                <div class="form-group mb-3">
                    <label class="form-label">Venue Name</label>
                    <input asp-for="VenueName" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Location</label>
                    <input asp-for="Location" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Capacity</label>
                    <input type="number" asp-for="Capacity" class="form-control" required />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Update Venue</button>
                    <a asp-action="VenueList" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
