@model List<EVENT_ORGANIZER.Models.Services>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-white mb-4">Available Services</h2>
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var service in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">

                        @* Image on top *@
                        <img src="~/images/services/@(service.ServiceName.ToLower()).jpg"
                             class="card-img-top"
                             alt="@service.ServiceName"
                             style="height: 200px; object-fit: cover;" />

                        <div class="card-body">
                            <h5 class="card-title text-primary">@service.ServiceName</h5>
                            <p class="card-text text-muted">@service.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-white">No services available right now.</p>
    }
</div>



