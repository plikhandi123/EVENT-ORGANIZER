@model EVENT_ORGANIZER.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Edit Booking</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditBooking" asp-controller="User" method="post">
                <input type="hidden" asp-for="BookingId" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-dark">Event Name</label>
                        <input type="text" class="form-control" asp-for="EventName" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label text-dark">Location</label>
                        <input type="text" class="form-control" asp-for="Location" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label text-dark">Venue</label>
                        <input type="text" class="form-control" asp-for="Venues" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label text-dark">Services</label>
                        <input type="text" class="form-control" asp-for="Services" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label text-dark">Capacity</label>
                        <input type="number" class="form-control" asp-for="Capacity" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label text-dark">Event Date</label>
                        <input type="date" class="form-control" asp-for="EventDate" required />
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label text-dark">Description</label>
                        <textarea class="form-control" asp-for="Description"></textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-4">Save Changes</button>
                    <a asp-action="BookingList" asp-controller="User" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
