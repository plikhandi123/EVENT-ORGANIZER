@model EVENT_ORGANIZER.Models.Register

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card-body text-center">
    <h3 class="mb-3 text-white">EVENT ORGANIZER</h3>
    <h4 class="mb-3 text-white">REGISTER</h4> <!-- Updated heading -->
    @using (Html.BeginForm("Register", "Login", FormMethod.Post, null))
    {
        <div class="form-group mb-3">
            @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", placeholder = "First Name" })
            @Html.ValidationMessageFor(a => a.FirstName, null, new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", placeholder = "Last Name" })
            @Html.ValidationMessageFor(a => a.LastName, null, new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(a => a.Email, null, new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number" })
            @Html.ValidationMessageFor(a => a.PhoneNumber, null, new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.TextBoxFor(a => a.Address, new { @class = "form-control", placeholder = "Address" })
            @Html.ValidationMessageFor(a => a.Address, null, new { @class = "text-danger" })
        </div>

        @* <div class="form-group mb-3">
            @Html.DropDownListFor(a => a.Gender, new List<SelectListItem>
        {
        new SelectListItem { Text = "Select Gender", Value = "" },
        new SelectListItem { Text = "Male", Value = "Male" },
        new SelectListItem { Text = "Female", Value = "Female" },
        new SelectListItem { Text = "Other", Value = "Other" }
        }, new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.Gender, null, new { @class = "text-danger" })
        </div> *@

        <div class="form-group mb-3">
            @Html.TextBoxFor(a => a.Password, new { @class = "form-control", @type = "password", placeholder = "Password" })
            @Html.ValidationMessageFor(a => a.Password, null, new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn gradient-btn w-100">Register</button>

        @if (!string.IsNullOrWhiteSpace(ViewBag.Error))
        {
            <div class="row">
                <div class="col-12 text-danger">
                    @ViewBag.Error
                </div>
            </div>
        }

        <!-- Already have an account? -->
        <div class="mt-3">
            <div>
                <span class="text-white">Already have an account? </span>
                @Html.ActionLink("Login Here", "Index", "Login", null, new { @class = "text-decoration-none" })
            </div>
        </div>
    }
</div>
